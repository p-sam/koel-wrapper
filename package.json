{
  "name": "koel-wrapper",
  "productName": "Koel",
  "private": true,
  "version": "0.2.0",
  "description": "An Electron wrapper for Koel",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install-app-deps": "build install-app-deps",
    "postinstall": "npm run install-app-deps",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.koel.wrapper",
    "asar": true,
    "compression": "maximum",
    "files": [
      "build/icon.*",
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Audio",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "ia32",
            "x64",
            "armv7l"
          ]
        }
      ]
    }
  },
  "keywords": [],
  "author": {
    "name": "p-sam",
    "email": "p-sam@d3vs.net",
    "url": "https://github.com/p-sam"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/p-sam/koel-wrapper.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-media-service": "^0.2.2",
    "electron-prompt": "^0.5.0",
    "electron-settings": "^3.1.4",
    "electron-window-state": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^1.8.2-beta.3",
    "electron-builder": "^19.48.2"
  }
}
