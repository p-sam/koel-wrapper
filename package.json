{
  "name": "koel-wrapper",
  "productName": "Koel",
  "private": true,
  "version": "0.0.0-dev",
  "description": "An Electron wrapper for Koel",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install-app-deps": "npm run build -- install-app-deps",
    "postinstall": "npm run install-app-deps",
    "pack": "npm run build -- --dir",
    "build": "cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder",
    "build:all": "npm run build -- -lmw",
    "build:linux": "npm run build -- -l",
    "build:win": "npm run build -- -w",
    "build:mac": "npm run build -- -m",
    "lint": "xo",
    "lint:fix": "npm run lint -- --fix"
  },
  "xo": {
    "esnext": true,
    "env": [
      "node",
      "browser"
    ]
  },
  "build": {
    "appId": "com.koel.wrapper",
    "asar": true,
    "compression": "maximum",
    "artifactName": "${name}_${version}-${os}-${arch}.${ext}",
    "files": [
      "build/icon.*",
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Audio",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "ia32",
            "x64",
            "armv7l"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "build/package.icns"
    },
    "nsis": {
      "installerIcon": "build/package.ico",
      "uninstallerIcon": "build/package.ico"
    }
  },
  "keywords": [],
  "author": {
    "name": "p-sam",
    "email": "p-sam@d3vs.net",
    "url": "https://github.com/p-sam"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/p-sam/koel-wrapper.git"
  },
  "license": "MIT",
  "dependencies": {
    "debounce-promise": "^3.1.2",
    "default-passive-events": "^1.0.10",
    "discord-rpc": "^3.1.0",
    "doc-ready": "^1.0.4",
    "electron-context-menu": "^0.16.0",
    "electron-media-service": "github:auryo/electron-media-service",
    "electron-prompt": "^1.5.1",
    "electron-settings": "^3.2.0",
    "electron-timber": "^0.5.1",
    "electron-unhandled": "^3.0.2",
    "electron-window-state": "^5.0.3",
    "nan": "^2.14.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.0",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "xo": "^0.26.1"
  }
}
